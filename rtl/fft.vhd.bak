LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.STD_LOGIC_UNSIGNED.ALL;

ENTITY fft IS
	-- 旋转因子常量（左移13位储存）
	CONSTANT W0_real: STD_LOGIC_VECTOR(15 DOWNTO 0) := "0010000000000000";
	CONSTANT W0_imag: STD_LOGIC_VECTOR(15 DOWNTO 0) := "0000000000000000";
	CONSTANT W1_real: STD_LOGIC_VECTOR(15 DOWNTO 0) := "0000000000000000";
	CONSTANT W1_imag: STD_LOGIC_VECTOR(15 DOWNTO 0) := "1010000000000000";
	CONSTANT W2_real: STD_LOGIC_VECTOR(15 DOWNTO 0) := "1010000000000000";
	CONSTANT W2_imag: STD_LOGIC_VECTOR(15 DOWNTO 0) := "0000000000000000";
	CONSTANT W3_real: STD_LOGIC_VECTOR(15 DOWNTO 0) := "0010000000000000";
	CONSTANT W3_imag: STD_LOGIC_VECTOR(15 DOWNTO 0) := "0010000000000000";
	
	PORT(
		EN, CLK, RESET, INV: IN STD_LOGIC;
		I0_real,I1_real,I2_real,I3_real,I4_real,I5_real,I6_real,I7_real: IN STD_LOGIC_VECTOR(15 DOWNTO 0);
		I0_imag,I1_imag,I2_imag,I3_imag,I4_imag,I5_imag,I6_imag,I7_imag: IN STD_LOGIC_VECTOR(15 DOWNTO 0);
		W0_real, W1_real, W2_real, W3_real: IN STD_LOGIC_VECTOR(15 DOWNTO 0);
		W0_imag, W1_imag, W2_imag, W3_imag: IN STD_LOGIC_VECTOR(15 DOWNTO 0);
		O0_real,O1_real,O2_real,O3_real,O4_real,O5_real,O6_real,O7_real: OUT STD_LOGIC_VECTOR(15 DOWNTO 0);
		O0_imag,O1_imag,O2_imag,O3_imag,O4_imag,O5_imag,O6_imag,O7_imag: OUT STD_LOGIC_VECTOR(15 DOWNTO 0)
	);